@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Travel Experts</h1>
    <h3>Your go-to website for all your vacational needs</h3>
    <p>With our simple, user-oriented website featuring a hand-picked selection of the best vacation packages from trusted travel agencies, Booking your dream vacation is just a few clicks away.</p>
    @* Carousel code from: https://www.w3schools.com/bootstrap5/bootstrap_carousel.php *@
    <!-- Carousel -->
    <div id="travelpics" class="carousel slide" data-bs-ride="carousel">

        <!-- Indicators/dots -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#travelpics" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#travelpics" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#travelpics" data-bs-slide-to="2"></button>
            <button type="button" data-bs-target="#travelpics" data-bs-slide-to="3"></button>
            <button type="button" data-bs-target="#travelpics" data-bs-slide-to="4"></button>
            <button type="button" data-bs-target="#travelpics" data-bs-slide-to="5"></button>
        </div>

        <!-- The slideshow/carousel -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/akihabara.jpg" alt="Akihabara" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/images/amazonForestPeople.jpg" alt="Amazon Forest" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/images/businessRestaurant.jpg" alt="Restaurant" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/images/indiaElephantRide.jpg" alt="India" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/images/kidsPlayingInSand.jpg" alt="Sand Castle" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="~/images/rockeyMountainsPeopleHiking.jpg" alt="Hiking" class="d-block w-100">
            </div>
        </div>

        <!-- Left and right controls/icons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#travelpics" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#travelpics" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>
