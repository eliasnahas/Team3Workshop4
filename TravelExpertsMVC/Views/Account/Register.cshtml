@model TravelExpertsData.Customer

@{
    ViewData["Title"] = "Register";
}


@if (TempData["SuccessMessageRegister"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessageRegister"]
    </div>
}
<div class="container">
    <h1>@ViewData["Title"]</h1>
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.SuccessMessage
        </div>
    }
    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="UserName">Username</label>
                <input id="UserName" type="text" asp-for="Username" class="form-control"
                        placeholder="Create a Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="Email">Email</label>
                <input id="Email" type="text" asp-for="CustEmail" class="form-control"
                        placeholder="Optional" />
                <span asp-validation-for="CustEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="FirstName">First Name</label>
                <input id="FirstName" type="text" asp-for="CustFirstName" class="form-control"
                        placeholder="Enter your First Name" />
                <span asp-validation-for="CustFirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="LastName">Last Name</label>
                <input id="LastName" type="text" asp-for="CustLastName" class="form-control"
                        placeholder="Enter your Last Name" />
                <span asp-validation-for="CustLastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Address">Address</label>
                <input id="Address" type="text" asp-for="CustAddress" class="form-control"
                        placeholder="Enter your Address" />
                <span asp-validation-for="CustAddress" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="City">City</label>
                <input id="City" type="text" asp-for="CustCity" class="form-control"
                        placeholder="Enter your City" />
                <span asp-validation-for="CustCity" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Country">Country</label>
                <input id="Country" type="text" asp-for="CustCountry" class="form-control"
                        placeholder="Enter your Country" />
                <span asp-validation-for="CustCountry" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Province">Province</label>
                <input id="Province" type="text" asp-for="CustProv" class="form-control"
                        placeholder="Enter your Province" />
                <span asp-validation-for="CustProv" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="PostalCode">Postal Code</label>
                <input id="PostalCode" type="text" asp-for="CustPostal" class="form-control"
                        placeholder="Enter a valid Postal code" />
                <span asp-validation-for="CustPostal" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="PhoneNumber">Phone Number</label>
                <input id="PhoneNumber" type="text" asp-for="CustHomePhone" class="form-control"
                        placeholder="Optional" />
                <span asp-validation-for="CustHomePhone" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="BusinessNumber">Business Phone Number</label>
                <input id="BusinessNumber" type="text" asp-for="CustBusPhone" class="form-control"
                        placeholder="Optional" />
                <span asp-validation-for="CustBusPhone" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="Password">Password</label>
                <input id="Password" type="password" asp-for="Password" class="form-control"
                        placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="ConfirmPassword">Confirm Password</label>
                <input id="ConfirmPassword" type="password" asp-for="ConfirmPassword" class="form-control"
                        placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-primary" />
            <a asp-action="Login" class="btn btn-outline-secondary">Login</a>
        </div>
    </form>
</div>
