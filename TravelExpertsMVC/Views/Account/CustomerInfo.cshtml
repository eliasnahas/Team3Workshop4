@model TravelExpertsData.Customer

@{
    ViewData["Title"] = "CustomerInfo";
}

<h1>My Information</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label class="control-label">First Name</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustFirstName" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Last Name</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustLastName" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Address</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustAddress" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">City</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustCity" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Province</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustProv" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Postal Code</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustPostal" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Country</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustCountry" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Home Phone</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustHomePhone" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Business Phone</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustBusPhone" class="form-control" readonly />
        </dd>

        <dt class = "col-sm-2">
            <label class="control-label">Email Address</label>
        </dt>
        <dd class = "col-sm-10">
            <input asp-for="CustEmail" class="form-control" readonly />
        </dd>
    </dl>
</div>
<div>
    
    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerId }, new {@class="btn btn-primary"})
    @Html.ActionLink("Change Password", "ChangePassword", new { id = Model.CustomerId }, new {@class="btn btn-primary"})
</div>
