
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Travel Packages</h1>
<div class="d-flex justify-content-center">
    
    <form class="d-flex justify-content-center" asp-action="ConfirmPurchase" method="post">

        @* this is the one that has a slightly misaligned image. I have no idea why; but I blame bootstrap. *@
        <div class="card m-2" style="width: 18rem;">
            <img src="~/images/maldives.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Caribbean New Year</h5>
                <h6 class="card-subtitle mb-2 text-muted">$4,800</h6> 
                <p class="card-text">Cruise the Caribbean & celebrate the New Year.</p>
                @Html.ActionLink("Purchase", "ConfirmPurchase", "Packages", new { packageId = 1 }, new { @class = "btn btn-primary" })
            </div>
        </div>
    

        <div class="card m-2" style="width: 18rem;">
            <img src="~/images/amazonForestPeople.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Polynesian Paradise</h5>
                <h6 class="card-subtitle mb-2 text-muted">$3,000</h6>
                <p class="card-text">All inclusive Hawaiian package, take in the incredible scenery as you learn about the culture around you.</p>
                @Html.ActionLink("Purchase", "ConfirmPurchase", "Packages", new { packageId = 2 }, new { @class = "btn btn-primary"}) 
            </div>
        </div>


        <div class="card m-2" style="width: 18rem;">
            <img src="~/images/akihabara.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">Asian Expedition</h5>
                <h6 class="card-subtitle mb-2 text-muted">$2,800</h6>
                <p class="card-text">Explore the beautiful, neon filled streets of Japan's Akihabara.</p>
                @Html.ActionLink("Purchase", "ConfirmPurchase", "Packages", new { packageId = 3 }, new { @class = "btn btn-primary" }) 
            </div>
        </div>

        <div class="card m-2" style="width: 18rem;">
            <img src="~/images/businessRestaurant.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">European Vacation</h5>
                <h6 class="card-subtitle mb-2 text-muted">$3,000</h6>
                <p class="card-text">Take a breather at a 20-story European hotel, with beautiful sights and plenty of outlets to explore.</p>
                @Html.ActionLink("Purchase", "ConfirmPurchase", "Packages", new { packageId = 4 }, new { @class = "btn btn-primary" }) 
            </div>
        </div>
    </form>
</div>
